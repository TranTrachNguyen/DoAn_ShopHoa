@model ShopHoa.Models.KhachHang

@{
    ViewBag.Title = "Edit_KH";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .disabled {
        pointer-events: none;
        color: red;
    }
</style>
<h2>Chỉnh Sửa Thông Tin Khách Hàng</h2>

@using (Html.BeginForm("Edit_KH", "Admin", new { id = Model.MaKhachHang }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaKhachHang)

                <div class="form-group disabled">
                    <p>Mã đăng ký</p>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.MaDangKy, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaDangKy, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Tên khách hàng</p>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Địa chỉ</p>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Số điện thoại</p>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top: 10px">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "QL_KhachHang", "Admin")
</div>
