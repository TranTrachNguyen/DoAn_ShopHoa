@model ShopHoa.Models.DonDatHang

@{
    ViewBag.Title = "Edit_DH";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .disabled {
        pointer-events: none;
        color: red;
    }
</style>


<h2>Chỉnh Sửa Đơn Đặt Hàng</h2>

@using (Html.BeginForm("SuaDDHThanhCong", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDonHang)
        <div class="row">
            <div class="form-group col disabled">
                <h6>Mã khách hàng</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaKhachHang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col">
                <h6>Tên khách hàng</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col disabled">
                <h6>Ngày đặt hàng</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDatHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayDatHang, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group col">
                <h6>Địa chỉ giao hàng</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiGiaoHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiGiaoHang, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col disabled">
                <h6>Số lượng</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col">
                <h6>Số điện thoại</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group disabled">
            <h6>Trạng thái đơn hàng</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrangThaiDonHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrangThaiDonHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group disabled">
            <h6>Tổng giá trị đơn hàng</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TongGiaTriDonHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TongGiaTriDonHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "QL_DonDatHang", "Admin")
</div>
